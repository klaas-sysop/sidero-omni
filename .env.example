# Sidero Omni Configuration
# Copy this file to .env and update the values

# ============================================
# REQUIRED - Core Configuration
# ============================================

# Your domain name (e.g., omni.example.com)
DOMAIN_NAME=omni.example.com

 # Sidero Omni Configuration
 # Copy this file to .env and update the values

 # ============================================
 # REQUIRED - Core Configuration
 # ============================================

 # Your domain name (e.g., omni.example.com)
 DOMAIN_NAME=omni.example.com

 # Public IP address of your server
 PUBLIC_IP=192.168.1.100

 # Omni version (check ghcr.io/siderolabs/omni for available tags)
 OMNI_VERSION=latest

 # ============================================
 # AUTOMATIC CERTIFICATE GENERATION (One-Click)
 # ============================================

 # Enable automatic certificate generation on container start
 # Set to 'true' for automatic generation, 'false' to use pre-existing certs
 ENABLE_CERT_GENERATION=true

 # Let's Encrypt email for certificate notifications
 LETSENCRYPT_EMAIL=admin@example.com
 LETSENCRYPT_STAGING=true

 # Cloudflare API Token (with DNS edit permissions)
 # Generate at: https://dash.cloudflare.com/profile/api-tokens
 # Required for automatic Let's Encrypt certificate generation
 CLOUDFLARE_API_TOKEN=your_api_token_here

 # Cloudflare Zone ID (your domain's zone ID)
 # Find at: https://dash.cloudflare.com/
 # Required for automatic Let's Encrypt certificate generation
 CLOUDFLARE_ZONE_ID=your_zone_id_here

 # ============================================
 # OMNI CONFIGURATION
 # ============================================

# Generate with: uuidgen
# Leave empty to auto-generate on container startup
ACCOUNT_ID=

 # Name of your Omni installation
 OMNI_NAME=onprem-omni

 # Data directory (will be created if doesn't exist)
 DATA_DIR=./data

 # ============================================
 # ADVERTISED URLS
 # ============================================

 ADVERTISED_API_URL=https://${DOMAIN_NAME}/
 SIDEROLINK_API_ADVERTISED_URL=https://${DOMAIN_NAME}:8090/
 WIREGUARD_ADVERTISED_ADDR=${PUBLIC_IP}:50180
 K8S_PROXY_URL=https://${DOMAIN_NAME}:8100/

 # ============================================
 # AUTHENTICATION - Select ONE
 # ============================================

 # --- Auth0 ---
 AUTH0_ENABLED=false
 AUTH0_DOMAIN=your-tenant.us.auth0.com
 AUTH0_CLIENT_ID=your_auth0_client_id

 # --- SAML (Azure AD / EntraID) ---
 SAML_ENABLED=false
 SAML_URL=https://login.microsoftonline.com/your-tenant-id/federationmetadata/2007-06/federationmetadata.xml

 # --- OIDC ---
 OIDC_ENABLED=false
 OIDC_PROVIDER_URL=https://your-oidc-provider.com
 OIDC_CLIENT_ID=your_oidc_client_id
 OIDC_CLIENT_SECRET=your_oidc_client_secret
 OIDC_LOGOUT_URL=https://your-oidc-provider.com/logout

 # ============================================
 # INITIAL ACCESS
 # ============================================

 # Email address of the first admin user
 INITIAL_USERS=admin@example.com
